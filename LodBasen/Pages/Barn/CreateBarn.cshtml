<!-- Add Material UI stylesheet -->
<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }
    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>


<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:0px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Tilføj barn</h4>

                <form method="post">
                    
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="@Model.barn.Navn" class="form-control" id="floatingTextInput1" placeholder="John" />
                        <label for="floatingTextInput1" asp-for="@Model.barn.Navn"></label>
                        <span asp-validation-for="@Model.barn.Navn" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-control" id="floatingSelect" asp-for="SelectedGruppeNavn" asp-items="new SelectList(Model.GruppeNavnOptions)">
                            <option value=""></option>
                        </select>
                        <label for="floatingSelect" asp-for="SelectedGruppeNavn">Gruppenavn</label>
                        <span asp-validation-for="SelectedGruppeNavn" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.barn.Antal" class="form-control" value="0" id="floatingTextInput2" />
                                <label for="floatingTextInput2" asp-for="@Model.barn.Antal" class="control-label"></label>
                                <span asp-validation-for="@Model.barn.Antal" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.barn.Solgt" class="form-control" value="0" id="floatingEmailInput" />
                                <label for="floatingEmailInput" asp-for="@Model.barn.Solgt" class="control-label"></label>
                                <span asp-validation-for="@Model.barn.Solgt" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="">
                        <input type="submit" value="Tilføj barn" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

