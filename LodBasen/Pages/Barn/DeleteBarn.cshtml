@page
@model LodBasen.Pages.Barn.DeleteBarnModel
@{
    ViewData["Title"] = "Delete";
}

<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }

    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>

<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:7px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Slet barn</h4>

                <form method="post">
                    <div class="form-floating mb-3">
                <dl class="row">
                    <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.barn.Navn)</dt>
                    <dd class="col-sm-10">  @Model.barn.Navn </dd>
                    <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.barn.Antal) </dt>
                    <dd class="col-sm-10"> @Model.barn.Antal </dd>
                    <dt class="col-sm-2">  @Html.DisplayNameFor(model => model.barn.Solgt) </dt>
                    <dd class="col-sm-10"> @Model.barn.Solgt  </dd>
                    <dt class="col-sm-2">  @Html.DisplayNameFor(model => model.barn.GruppeId) </dt>
                    <dd class="col-sm-10"> @Model.barn.GruppeId  </dd>
                </dl>
                </div>
                    <input type="hidden" asp-for="barn.BarnId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="/Barn/GetBarn">
                        <input type="button" class="btn btn-outline-primary" value="Tilbage" />
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>