@page
@model LodBasen.Pages.Barn.UpdateBarnModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update barn:</h1>

<div class="row">
    <div class="col-md-4">
<form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.barn.Navn" class="control-label"></label>
                <input asp-for="@Model.barn.Navn" class="form-control" />
                <span asp-validation-for="@Model.barn.Navn" class="text-danger"></span>
                <input asp-for="@Model.barn.BarnId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="@Model.barn.Antal" class="control-label"></label>
                <input asp-for="@Model.barn.Antal" class="form-control" />
                <span asp-validation-for="@Model.barn.Antal" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="@Model.barn.Solgt" class="control-label"></label>
                <input asp-for="@Model.barn.Solgt" class="form-control" />
                <span asp-validation-for="@Model.barn.Solgt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.barn.GruppeId" class="control-label"></label>
                <input asp-for="@Model.barn.GruppeId" class="form-control" />
                <span asp-validation-for="@Model.barn.GruppeId" class="text-danger"></span>
            </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>