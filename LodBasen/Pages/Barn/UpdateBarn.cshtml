@page
@model LodBasen.Pages.Barn.UpdateBarnModel
@{
    ViewData["Title"] = "Update";
}

<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }

    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>

<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:7px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Rediger barn</h4>

                <form method="post">
                    <div asp-validation-summary="  ModelOnly  " class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <div class="form-group">
                            <label asp-for="@Model.barn.Navn" class="control-label"></label>
                            <input asp-for="@Model.barn.Navn" class="form-control" />
                            <span asp-validation-for="@Model.barn.Navn" class="text-danger"></span>
                            <input asp-for="@Model.barn.BarnId" class="form-control" hidden />
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-control" id="floatingSelect" asp-for="SelectedGruppeNavn" asp-items="new SelectList(Model.GruppeNavnOptions)">
                            <option value=""></option>
                        </select>
                        <label for="floatingSelect" asp-for="SelectedGruppeNavn">Gruppenavn</label>
                        <span asp-validation-for="SelectedGruppeNavn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gem" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>