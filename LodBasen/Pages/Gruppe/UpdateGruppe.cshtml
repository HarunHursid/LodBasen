@page
@model LodBasen.Pages.Gruppe.UpdateGruppeModel
@{

    ViewData["Title"] = "Update";
}

<h1>Update Gruppe:</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.gruppe.GruppeNavn" class="control-label"></label>

                <input asp-for="@Model.gruppe.GruppeNavn" class="form-control" />

                <input asp-for="@Model.gruppe.GruppeId" class="form-control" hidden/>
                <span asp-validation-for="@Model.gruppe.GruppeNavn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

