@page
@model LodBasen.Pages.Gruppe.CreateGruppeModel
@{
    ViewData["Title"] = "Create";
}

<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }

    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>


<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:7px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Tilføj gruppe</h4>
                     <form method="post">
                        <div asp-validation-summary="  ModelOnly  " class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="@Model.Gruppe.GruppeNavn" class="form-control" id="floatingTextInput1" placeholder="John" />
                                <label for="floatingTextInput1" asp-for="@Model.Gruppe.GruppeNavn"></label>
                                <span asp-validation-for="@Model.Gruppe.GruppeNavn" class="text-danger"></span>
                            </div>
                    <div class="form-group">
                <input type="submit" value="Tilføj gruppe" class="btn btn-primary" />
                        <a asp-page="/Gruppe/GetGruppe">
                            <input type="button" class="btn btn-outline-primary" value="Tilbage" />
                        </a>
                    </div>
                    </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>