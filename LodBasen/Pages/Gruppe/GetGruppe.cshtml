<p>
    <a asp-page="/Gruppe/CreateGruppe">Tilføj gruppe</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Gruppe Navn </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Grupper)
            {
                <tr>
                    <td> 
                        <p>
                        @item.GruppeNavn
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Barn/GruppeBarn" asp-route-id="@item.GruppeId">Børn i gruppen</a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Gruppe/UpdateGruppe" asp-route-id="@item.GruppeId">Rediger gruppe</a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Gruppe/DeleteGruppe" asp-route-id="@item.GruppeId">Slet gruppe</a>
                        </p>
                    </td>
                </tr>
            }
        }
</table>
