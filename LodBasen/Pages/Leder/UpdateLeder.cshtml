@page
@model LodBasen.Pages.Leder.UpdateLederModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Leder:</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.leder.Navn" class="control-label"></label>
                <input asp-for="@Model.leder.Navn" class="form-control" />
                <span asp-validation-for="@Model.leder.Navn" class="text-danger"></span>
                <input asp-for="@Model.leder.LederId" class="form-control" hidden />
            </div>
            <div>
                <label asp-for="SelectedGruppeNavn">GruppeNavn</label>
                <select asp-for="SelectedGruppeNavn" asp-items="new SelectList(Model.GruppeNavnOptions)">
                    <option value="">Select Gruppe</option>
                </select>
                <span asp-validation-for="SelectedGruppeNavn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>