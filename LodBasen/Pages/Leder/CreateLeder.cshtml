@page
@model LodBasen.Pages.Leder.CreateLederModel
@{
    ViewData["Title"] = "CreateLeder";
}

<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }

    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>

<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:7px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Tilføj leder</h4>
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="@Model.leder.Navn" class="form-control" id="floatingTextInput1" placeholder="John" />
                        <label for="floatingTextInput1" asp-for="@Model.leder.Navn"></label>
                        <span asp-validation-for="@Model.leder.Navn" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
						<select class="form-control" id="floatingSelect" asp-for="SelectedGruppeNavn" asp-items="new SelectList(Model.GruppeNavnOptions)">
							<option value=""></option>
						</select>
						<label for="floatingSelect" asp-for="SelectedGruppeNavn">Gruppenavn</label>
						<span asp-validation-for="SelectedGruppeNavn" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <input type="submit" value="Tilføj leder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
