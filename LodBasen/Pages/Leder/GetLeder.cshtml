<h4 style="color:red"> Liste af Ledere</h4>

<p>
    <a asp-page="/Leder/CreateLeder">Tilføj Leder</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Navn </th>
            <th> Antal </th>
            <th> Udleveret </th>
            <th> Gruppe </th>
            <th> Slet </th>
            <th> Rediger </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Ledere)
            {
                <tr>
                    <td>  @item.Navn </td>
                    <td>  @item.Antal </td>
                    <td>  @item.Udleveret </td>
                    <td>  @item.GruppeId </td>

                    <td> 
                        <a asp-page="/Leder/DeleteLeder" asp-route-id="@item.LederId">Slet Leder</a>
                    </td>
                    <td> 
                        <a asp-page="/Leder/UpdateLeder" asp-route-id="@item.LederId">Rediger Leder</a> 
                    </td>

                </tr>
            }
        }
</table>
