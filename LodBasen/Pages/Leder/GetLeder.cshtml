<p>
    <a asp-page="/Leder/CreateLeder">
        <input type="button" class="btn btn-outline-primary" value="Tilføj leder" />
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Navn </th>
            <th> Antal </th>
            <th> Udleveret </th>
            <th> Gruppe </th>
            <th> Rediger/Slet </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Ledere)
            {
                <tr>
                    <td>  @item.Navn </td>
                    <td>  @item.Antal </td>
                    <td>  @item.Udleveret </td>
                    <td>  @item.GruppeId </td>

                    <td> 
                        <a asp-page="/Leder/UpdateLeder" asp-route-id="@item.LederId">
                             <submit class="btn btn-outline-dark"><i class="fa fa-pencil"></i></submit>
                        </a> 
                        <a asp-page="/Leder/DeleteLeder" asp-route-id="@item.LederId">
                             <submit class="btn btn-outline-danger"><i class="fa fa-trash"></i></submit>
                        </a>
                    </td>

                </tr>
            }
        }
</table>
