<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LodBasen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LodBasen.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    @if (Context.Session.GetString("role") == null)
    {
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <div class="col-md-3 mb-2 mb-md-0">
                    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <a class="navbar-brand" asp-area="" asp-page="">LodBasen</a>
                    </a>
                </div>

                <div class="col-md-3 text-end">
                    <a type="button" class="btn btn-outline-primary me-2" asp-area="" asp-page="/Auth/Login">Log på</a>
                    <a type="button" class="btn btn-primary " asp-area="" asp-page="/Auth/Register">Opret</a>
                </div>
            </header>
        </div>
    }
    else if (Context.Session.GetString("role").Equals("Admin"))
    {
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <div class="col-md-3 mb-2 mb-md-0">
                    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <a class="navbar-brand" asp-area="" asp-page="">LodBasen</a>
                    </a>
                </div>
               
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="" asp-page="/GetSuperSælger" class="nav-link px-2">Supersælger</a></li>
                    <li><a asp-area="" asp-page="/Barn/GetBarn" class="nav-link px-2">Barn</a></li>
                    <li><a asp-area="" asp-page="/Gruppe/GetGruppe" class="nav-link px-2">Gruppe</a></li>
                    <li><a asp-area="" asp-page="/Leder/GetLeder" class="nav-link px-2">Leder</a></li>
                    <li><a asp-area="" asp-page="/Salg/GetLodsalg" class="nav-link px-2">Overførsel</a></li>
                </ul>

                <div class="col-md-3 text-end">
                    
                        <li class="nav-item dropdown" style="list-style-type: none;">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-controls="navbarSupportedContent">
                            Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Index">Home</a></li>
                            <li><a class="dropdown-item" asp-page="/Auth/Logout">Log af</a></li>
                        </ul>
                    </li>
                   
                </div>
            </header>
        </div>
    }
    else if (Context.Session.GetString("role").Equals("Leder"))
    {
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <div class="col-md-3 mb-2 mb-md-0">
                    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <a class="navbar-brand" asp-area="" asp-page="">LodBasen</a>
                    </a>
                </div>

                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="" asp-page="/GetSuperSælger" class="nav-link px-2">Supersælger</a></li>
                    <li><a asp-area="" asp-page="/Barn/GetBarn" class="nav-link px-2">Barn</a></li>
                    <li><a asp-area="" asp-page="/Gruppe/GetGruppe" class="nav-link px-2">Gruppe</a></li>
                    <li><a asp-area="" asp-page="/Leder/GetLeder" class="nav-link px-2">Leder</a></li>
                    <li><a asp-area="" asp-page="/Salg/GetLodsalg" class="nav-link px-2">Overførsel</a></li>
                </ul>

                <div class="col-md-3 text-end">

                    <li class="nav-item dropdown" style="list-style-type: none;">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-controls="navbarSupportedContent">
                            Leder
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Auth/Logout">Log af</a></li>
                        </ul>
                    </li>

                </div>
            </header>
        </div>
    }
    else if (Context.Session.GetString("role").Equals("Barn"))
    {
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <div class="col-md-3 mb-2 mb-md-0">
                    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <a class="navbar-brand" asp-area="" asp-page="">LodBasen</a>
                    </a>
                </div>

                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="" asp-page="/GetSuperSælger" class="nav-link px-2">Supersælger</a></li>
                    <li><a asp-area="" asp-page="/Barn/GetBarn" class="nav-link px-2">Barn</a></li>
                </ul>

                <div class="col-md-3 text-end">

                    <li class="nav-item dropdown" style="list-style-type: none;">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-controls="navbarSupportedContent">
                            Barn
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Auth/Logout">Log af</a></li>
                        </ul>
                    </li>

                </div>
            </header>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LodBasen - Mette, Mads, Richard, Kristian og Harun
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>