@page
@model LodBasen.Pages.Auth.LoginModel
@{
}

<style>
    .form-control {
        background: #F2F2F2;
        border-radius: 7px;
        border: none;
    }

    .banner {
        width: 80%;
        margin: auto;
        border-radius: 5px;
    }
</style>


<div class="banner">
    <div class="container p-5">
        <div class="card mx-3 mt-n5 shadow-lg" style="border-radius:7px; border:none">
            <div class="card-body p-5">
                <h4 class="card-title mb-3 text-dark text-uppercase" style="font-weight:700">Login</h4>
                @if (Model.errorMessage.Length > 0)
                {
                    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                        <strong>@Model.errorMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                    </div>
                }
                else if (Model.successMessage.Length > 0)
                {
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                    </div>
                }

                <form method="post">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="Email" id="email">
                        <label for="email" asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Password" class="form-control" type="password" id="kodeord">
                        <label for="kodeord" asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col d-grid">
                            <button type="submit" class="btn btn-primary">Log ind</button>
                        </div>
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary" href="/" role="button">Annuller</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
